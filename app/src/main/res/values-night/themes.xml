<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Europa" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_blue</item>
        <item name="android:editTextColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.AppCompat.Medium.DarkBlue" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.DarkBlue" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>